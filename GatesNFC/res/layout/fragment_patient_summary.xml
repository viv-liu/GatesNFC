<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/scrollView1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >
		<LinearLayout 
			android:id="@+id/LinearLayout1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="10dip"
			android:orientation="vertical" >
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="NAME: " />
			<Button
			    android:id="@+id/button_name"
			    style="?android:attr/buttonStyleSmall"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:background="#eeeeee"
			    android:gravity="center_vertical|left" 
			    android:text="Poof" />
			
			<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="BIRTHDATE: " />
			
			<Button
			    android:id="@+id/button_birthdate"
			    style="?android:attr/buttonStyleSmall"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:background="#eeeeee"
			    android:gravity="center_vertical|left"
			    android:text="Feb 1, 2013" />
			
			<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="MOTHER: " />
			
			<Button
			    android:id="@+id/button_mom"
			    style="?android:attr/buttonStyleSmall"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:background="#eeeeee"
			    android:gravity="center_vertical|left"
			    android:text="Wanda" />
			
			<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="FATHER: " />
			
			<Button
			    android:id="@+id/button_dad"
			    style="?android:attr/buttonStyleSmall"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:background="#eeeeee"
			    android:gravity="center_vertical|left" 
			    android:text="Cosmo" />
			
			<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="ADDRESS: " />
			
			<Button
			    android:id="@+id/button_address"
			    style="?android:attr/buttonStyleSmall"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:background="#eeeeee"
			    android:gravity="center_vertical|left" 
			    android:minLines="4"
			    android:text="100 King&apos;s Circle Rd.Toronto\nON\nCanada, M5S1G4" />

			<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="VACCINES LOL TODO" />

			<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="NOTES" />

			<Button
			    android:id="@+id/button_notes"
			    style="?android:attr/buttonStyleSmall"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:background="#eeeeee"
			    android:gravity="center_vertical|left" 
			    android:text="Fairy God Parents!!!" />

			<!-- Spaceholder -->
			<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textSize="10sp" />

			<Button
		        android:id="@+id/button_complete"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:padding="10dip"
		        android:background="#33b5e5"
		        android:textColor="#ffffff"
		        android:text="Complete" />

		 </LinearLayout>
 </ScrollView>
